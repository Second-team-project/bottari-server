# ==============================================================================
# [App] 애플리케이션 기본 설정
# ==============================================================================
APP_NAME=               # 애플리케이션 이름
APP_MODE=               # 실행 모드 (dev: 개발, prod: 배포)
APP_TZ=                 # 애플리케이션 타임존
APP_PORT=               # 서버 실행 포트 번호
APP_URL=                # 서버 접속 기본 URL
APP_BASE_PATH=          # 파일 저장 기본 폴더명
APP_DIST_PATH=          # 프론트엔드 빌드 파일(index.html 등) 경로

# ==============================================================================
# [File Access] 정적 파일 접근 및 저장 경로 설정
# - ACCESS_ : 브라우저(URL)에서 접근할 가상 경로
# - FILE_   : 서버 내부의 실제 물리적 저장 경로
# ==============================================================================
# 이미지 및 용량 제한 (10MB = 10485760 byte)
# 리뷰 이미지
ACCESS_FILE_REVIEW_IMAGE_PATH=
FILE_REVIEW_IMAGE_PATH=
FILE_REVIEW_IMAGE_SIZE=10485760

# 이용 가이드 이미지
ACCESS_FILE_GUIDE_IMAGE_PATH=
FILE_GUIDE_IMAGE_PATH=
FILE_GUIDE_IMAGE_SIZE=10485760

# 아래는 수업 중에 있던 값. 사용하지 않으면 추후 삭제 TODO
ACCESS_FILE_POST_IMAGE_PATH=
FILE_POST_IMAGE_PATH=
FILE_POST_IMAGE_SIZE=10485760
# 유저 프로필 이미지 및 용량 제한
ACCESS_FILE_USER_PROFILE_PATH=
FILE_USER_PROFILE_PATH=
FILE_USER_PROFILE_SIZE=10485760

# ==============================================================================
# [Logger] 로그 기록 설정
# ==============================================================================
LOG_BASE_PATH=              # 로그 파일 저장 폴더
LOG_LEVEL=                  # 기록할 로그 수준 (error, warn, info, debug)
LOG_FILE_NAME=              # 로그 파일명

# ==============================================================================
# [MySQL] 데이터베이스 연결 설정
# ==============================================================================
DB_MYSQL_DIALECT=               # DB 종류
DB_MYSQL_LOG_FLG=               # SQL 실행 로그 출력 여부
DB_MYSQL_TIMEZONE=+09:00        # DB 타임존 (한국: +09:00)
DB_MYSQL_HOST=                  # DB 호스트 주소
DB_MYSQL_PORT=                  # DB 포트
DB_MYSQL_USER=                  # DB 계정 아이디
DB_MYSQL_PASSWORD=              # DB 계정 비밀번호
DB_MYSQL_DB_NAME=               # 연결할 스키마(데이터베이스) 이름
DB_MYSQL_CONNECTION_COUNT_MAX=  # 최대 연결(Pool) 개수
DB_MYSQL_CONNECTION_COUNT_MIN=  # 최소 연결 개수
DB_MYSQL_ACQUIRE_LIMIT=         # 커넥션 획득 대기 시간 (ms)
DB_MYSQL_IDLE_LIMIT=            # 커넥션 유휴 유지 시간 (ms)

